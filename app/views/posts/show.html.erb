<article class="post">
  <div class="wrapper">
    <div class="inner">
      <header>
        <h2><%= @post.title %></h2>
        <div class="meta">
          <%= @post.published_at %>
          <% if @post.tags.any? %>
            - <%= raw @post.tags.map { |t| link_to t.title, t }.join(", ") %>
          <% end %>
        </div>
      </header>
      <%= markdown(@post.content) %>
    </div>
  </div>
</article>
